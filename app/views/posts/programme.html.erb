<div class="span8">
  <h1>Programme</h1>

  <% @programme_posts.each do |post| %>
    <article id="post_<%= post.id %>" class="programe">
      <header>
        <h2><%= post.title %></h2>
        <p class="date"><%= post.published_at.to_date.to_s :calendar %></p>
      </header>
      <%= post.body.html_safe %>
    </article>
  <% end %>
</div>

<div class="span4">
  <%= render "recent_posts", posts: recent_news_posts %>
</div>
