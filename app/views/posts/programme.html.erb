

<div class="row">
<div class="eight columns offset-by-two">
  <h1><%= page_title "Programme" %></h1>

  <% unless @programme_posts.empty? %>
    <% @programme_posts.each do |post| %>
      <article id="post_<%= post.id %>" class="programme <%= "historical" if post.published_at < Time.current %>">
        <header>
          <p class="date"><%= post.published_at.to_date.to_s :calendar %></p>
          <h2><%= post.title %></h2>
        </header>
        <%= post.body.html_safe %>
      </article>
    <% end %>
  <% else %>
    <p>The current programme of events has ended, please check back for next years meetings and events.</p>
  <% end %>
</div>
</div>
