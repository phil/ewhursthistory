<div class="span2"></div>
<div class="span8">
  <h1><%= page_title "Programme" %></h1>

  <% unless @programme_posts.empty? %>
    <% @programme_posts.each do |post| %>
      <article id="post_<%= post.id %>" class="programe">
        <header>
          <h2><%= post.title %></h2>
          <p class="date"><%= post.published_at.to_date.to_s :calendar %></p>
        </header>
        <%= post.body.html_safe %>
      </article>
    <% end %>
  <% else %>
    <p>The current programme of events has ended, pleae check back for next years meetings and events.</p>
  <% end %>
</div>
