<div class="span2">
</div>
<div class="span8">
  <article class="page">
  <h1><%= @page.title %></h1>

  <%= @page.body.html_safe %>

  <div class="images">
    <% @page.images_not_in_page.each do |img| %>
      <%= image_tag img.file.url %>
    <% end %>
  </div>
</article>
</div>

<div class="span4 secondary">
  <div>
    <% @page.children.each do |page| %>
      <%= link_to page.title, page.full_path %>
    <% end %>
  </div>
</div>
