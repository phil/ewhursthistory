<div class="span8 span-centered">

  <article class="page">
    <h1><%= @page.title %></h1>

    <%= @page.body.html_safe %>

    <div class="images">
      <% @page.images_not_in_page.each do |img| %>
        <%= image_tag img.file.url %>
      <% end %>
    </div>
  </article>

  <div class="">
    <% @page.children.group_by{ |page| page.published_at.year }.each do |year, pages| %>
      <div>
        <h2><%= year %></h2>
        <ul>
          <% pages.each do |page| %>
            <li><%= link_to page.title, page.full_path %>
          </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>

</div>
